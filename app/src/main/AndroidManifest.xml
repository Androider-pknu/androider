<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.professionalandroid.apps.androider">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".SingUp"></activity>
        <activity android:name=".navigation.addpost.SelectPhotoActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".newsfeed.user.search.UserSelectLocal" />
        <activity android:name=".newsfeed.place.search.PlaceSearch" />
        <activity android:name=".newsfeed.user.more.MoreAndMore" />
        <activity android:name=".navigation.addpost.insertdata.ChooseCategoryActivity" />
        <activity android:name=".navigation.addpost.insertdata.AddItemActivity" />
        <activity android:name=".navigation.addpost.SelectItemActivity" />
        <activity android:name=".navigation.addpost.addressing.ChangeAddressActivity" />
        <activity android:name=".navigation.addpost.insertdata.ChooseSubCategoryActivity" />
        <activity android:name=".navigation.addpost.insertdata.InputCategoryActivity" />
        <activity android:name=".navigation.addpost.insertdata.AddStoreActivity" />
        <activity android:name=".navigation.addpost.addressing.ChooseBuildingActivity" />
        <activity android:name=".navigation.addpost.addressing.SearchAddressActivity" />
        <activity android:name=".navigation.addpost.SelectStoreActivity" />
        <activity
            android:name=".navigation.addpost.AddPostActivity"
            android:screenOrientation="fullSensor"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>