<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.professionalandroid.apps.androider">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".navigation.addpost.addstore.input.ChangeAddressActivity"></activity>
        <activity android:name=".navigation.addpost.addstore.input.ChoosingSubCategoryActivity" />
        <activity android:name=".navigation.addpost.addstore.input.ChooseCategoryActivity" />
        <activity android:name=".navigation.addpost.addstore.input.AddStoreActivity" />
        <activity android:name=".navigation.addpost.addstore.ChooseBuildingActivity" />
        <activity android:name=".navigation.addpost.addstore.addressing.ChooseFromGoogleMapActivity" />
        <activity android:name=".navigation.addpost.addstore.addressing.ChooseFromMapActivity" />
        <activity android:name=".navigation.addpost.addstore.addressing.SearchAddressActivity" />
        <activity android:name=".navigation.addpost.addstore.SelectStoreActivity" />
        <activity
            android:name=".navigation.addpost.AddPostActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>