<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background_color"
    tools:context=".navigation.addpost.addstore.input.ChooseSubCategoryActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_choosecategory_appbartop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_all_appbar"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_choosesubcategory_back"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_chevron_left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="상위 카테코리명"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textview_choosesubcategory_subcategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="상세 업종"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_choosecategory_appbartop" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_choosesubcategory_subcategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_choosesubcategory_subcategory" />

    <Button
        style="?borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_all_appbar"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:text="직접 입력"
        android:textColor="@color/gray"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/recyclerview_choosesubcategory_subcategory" />

</androidx.constraintlayout.widget.ConstraintLayout>