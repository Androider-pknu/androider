<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="260dp">

            <ImageView
                android:id="@+id/img_searchresult_marker_postImg"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/image03"
                android:layout_height="110dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:scaleType="centerCrop"
                android:background="@drawable/ic_chevron_left_black_32dp"
                android:layout_marginEnd="36dp"
                android:layout_marginBottom="85dp" />

            <TextView
                android:id="@+id/tv_searchresult_marker_postName"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@+id/img_searchresult_marker_postImg"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:text="냉정포차" />

            <TextView
                android:id="@+id/tv_searchresult_marker_category"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/tv_searchresult_marker_postName"
                android:layout_marginTop="15dp"
                android:layout_marginStart="16dp"
                android:text="sadasdas" />
            <TextView
                android:id="@+id/tv_searchresult_marker_phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/tv_searchresult_marker_category"
                android:layout_marginStart="16dp"
                android:text="sadasdas" />
            <TextView
                android:id="@+id/tv_searchresult_marker_address"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/tv_searchresult_marker_phoneNumber"
                android:layout_marginStart="16dp"
                android:text="sadasdas" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>